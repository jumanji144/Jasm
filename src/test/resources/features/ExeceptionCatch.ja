class ExceptionCatch extends java/lang/Object

macro System.out
    getstatic java/lang/System/out Ljava/io/PrintStream;
end

macro println
    invokevirtual java/io/PrintStream/println(Ljava/lang/String;)V
end

method public static main([Ljava/lang/String; args)V

    catch java/lang/Exception
        L1 // start
        L2 // end
        Handler // handler
        end

    System.out
    ldc "Before exception"
    println

L1:
    // create exception and throw it
    new java/lang/Exception
    dup
    ldc "Exception message"
    invokespecial java/lang/Exception.<init> (Ljava/lang/String;)V
    athrow


L2:
    System.out   ldc "After exception"   println

    return

Handler:
    astore exception

    System.out    ldc "Caught exception"    println

    System.out
      aload exception
      invokevirtual java/lang/Throwable/getMessage()Ljava/lang/String;
    println

    goto L2

end
